<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Odoo 19 uses res.groups.privilege instead of ir.module.category for permission sections -->
        <record id="privilege_category_whatsapp" model="res.groups.privilege">
            <field name="name">WhatsApp Integration</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_whatsapp_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_category_whatsapp"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_whatsapp_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="privilege_category_whatsapp"/>
            <field name="implied_ids" eval="[(4, ref('group_whatsapp_user'))]"/>
            <!-- <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/> Removed due to error -->
        </record>
    </data>
</odoo>
