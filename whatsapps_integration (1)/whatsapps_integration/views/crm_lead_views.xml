<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.form.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//header" position="inside">
                <button name="action_whatsapp_chat" type="object" string="Send WhatsApp" class="oe_highlight" icon="fa-whatsapp" visible="mobile or phone or partner_id" groups="whatsapps_integration.group_whatsapp_admin"/>
            </xpath>
        </field>
    </record>
</odoo>
