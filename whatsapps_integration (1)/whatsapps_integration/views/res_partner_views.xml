<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_whatsapp" model="ir.ui.view">
        <field name="name">res.partner.form.whatsapp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_whatsapp_chat" type="object" string="Send WhatsApp" class="oe_highlight" icon="fa-whatsapp" invisible="not phone" groups="whatsapps_integration.group_whatsapp_admin"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
