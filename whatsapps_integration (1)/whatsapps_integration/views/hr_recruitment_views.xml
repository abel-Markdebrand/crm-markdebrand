<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_applicant_form_whatsapp" model="ir.ui.view">
        <field name="name">hr.applicant.form.whatsapp</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//header" position="inside">
                <button name="action_whatsapp_chat" type="object" string="Send WhatsApp" class="oe_highlight" icon="fa-whatsapp" visible="partner_mobile or partner_phone or partner_id" groups="whatsapps_integration.group_whatsapp_admin"/>
            </xpath>
        </field>
    </record>
</odoo>
